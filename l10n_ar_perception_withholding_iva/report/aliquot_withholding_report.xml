<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Creating new PaperFormat -->
        <record id="group_aliquot_iva_paperformat" model="report.paperformat">
            <field name="name">Formato Alicuotas Iva Aitic</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">20</field>
            <field name="margin_bottom">40</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">20</field>
            <field name="dpi">90</field>
        </record>
            
        <report
            id="report_aliquot"
            model="account.payment.group"
            string="Certificados de Retenciones de IVA"
            report_type="qweb-pdf"
            name="l10n_ar_perception_withholding_iva.report_aliquot_withholding_iva"
            file="l10n_ar_perception_withholding_iva.report_aliquot_withholding_iva"
            paperformat="l10n_ar_perception_withholding_iva.group_aliquot_iva_paperformat"
            attachment="((object.name or '').replace('/','')+'.pdf')"/>
    </data>
</odoo>
