                            <field name="check_own_date" attrs="{'invisible': ['|', ('check_id', '=', False), ('payment_method_code', 'not in', ['received_third_check', 'own_check'])], 'required': [('payment_method_code', 'in', ['received_third_check', 'own_check'])]}"/>
